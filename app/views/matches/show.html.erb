<div class="row">
    <div class="col.s12.m6">
      <div class="card">
        <div class="card-content">
          <span class='card-title'> <%= @match.home_team %> - <%=	@match.away_team %></span>
          <hr>
          <div class="card-action">
            <%= link_to "<span class='fa fa-pencil'>Editer</span>".html_safe, edit_match_path( @match.id )%>
            <%= link_to "<span class='fa fa-close'>Supprimer</span>".html_safe,
                        match_path( @match.id ),
                        method: :delete,
                        data: { confirm: 'Confirmer la suppression ?' }%>
          </div>
        </div>
      </div>
    </div>
</div>
